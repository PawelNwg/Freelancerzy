@{
    ViewData["Title"] = "Login";
}
<form method="post" asp-controller="User" asp-action="Login">
    <div class="container">
        <h1 style="margin: 10px;">Zaloguj się! </h1>

        <input type="email" placeholder="Adres email" name="email" required> </br> </br>


        <input type="password" placeholder="Hasło" name="password" required> </br> </br>

        <button type="submit">Zatwierdź</button> </br> </br>

        <a class="nav-link text-secondary" asp-area="" asp-controller="User">Nie pamiętam hasła
        </a>
        <a class="nav-link text-secondary" asp-area="" asp-controller="User" asp-action="Register">Rejestracja</a>
    </div>
</form>