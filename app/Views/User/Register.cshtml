@model freelancerzy.Models.PageUser

@{
    ViewData["Title"] = "Rejestracja";
}
<style>
    .input {
        float: left;
        width: 300px;
        margin: 10px;
        padding: 10px;
    }

    .space {
        float: left;
        width: 100px;
        margin: 10px;
        padding: 10px;
    }
</style>


<form method="post" asp-controller="User" asp-action="Register">
    <div class="container">
        <h1 style="margin: 10px;">Zarejestruj się!</h1>

        <div class="input">

            <input asp-for="FirstName" placeholder="@Html.DisplayNameFor(model => model.FirstName)"/>
            <span asp-validation-for="FirstName" class="text-danger" style="font-size: small;"></span>
            </br> </br>

            <input asp-for="Surname" placeholder="@Html.DisplayNameFor(model => model.Surname)">
            <span asp-validation-for="Surname" class="text-danger" style="font-size: small;"></span>
            </br> </br>

            <input asp-for="Phonenumber" placeholder="@Html.DisplayNameFor(model => model.Phonenumber)">
            <span asp-validation-for="Phonenumber" class="text-danger" style="font-size: small;"></span>
            </br> </br>

        </div>

        <div class="space">

        </div>

        <div class="input">

            <input asp-for="EmailAddress" placeholder="@Html.DisplayNameFor(model => model.EmailAddress)">
            <span asp-validation-for="EmailAddress" class="text-danger" style="font-size: small;"></span>
            </br> </br>

            <div class="input-group align-items-center">

                <input asp-for="Credentials.Password" id="txtPassword" placeholder="@Html.DisplayNameFor(model => model.Credentials.Password)">

                <div class="input-group-append align-items-center">
                    <button id="show_password" class="fa fa-eye-slash btn btn-primary btn-sm align-items-center" type="button" style="float:left">
                    </button>
                </div>

                <span asp-validation-for="Credentials.Password" class="text-danger" style="font-size: small;"></span>

            </div>

            </br>

            <div class="input-group align-items-center">

                <input asp-for="Credentials.PasswordConfirmed" id="txtPassword2" placeholder="@Html.DisplayNameFor(model => model.Credentials.PasswordConfirmed)">

                <div class="input-group-append align-items-center">
                    <button id="show_password2" class="fa fa-eye-slash btn btn-primary btn-sm align-items-center" type="button" style="float:left">
                    </button>
                </div>

                <span asp-validation-for="Credentials.PasswordConfirmed" class="text-danger" style="font-size: small;"></span>

            </div>
        </div>

        <div style="clear:both"></div>
        <label class="text-danger">@ViewData["Error"]</label></br>
        <button type="submit">Zatwierdź</button> </br> </br>
        <label>Cieszymy się, że dołączasz do naszej społeczności!</label>

    </div>
</form>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#show_password, #show_password2').hover(function show() {
                $('#txtPassword, #txtPassword2').attr('type', 'text');
                $('.icon').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
            },
                function () {
                    $('#txtPassword, #txtPassword2').attr('type', 'password');
                    $('.icon').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
                });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

