@model IEnumerable<freelancerzy.Models.PageUser> 
@{ 
    ViewData["title"] = "Rozmowy";
}

<div class="container">
    <h2>Wybierz wątek</h2>
    <ul>
        @foreach (var user in Model)
        {
            <li><a class="text-dark" asp-action="Chat" asp-route-userId="@user.Userid">@user.EmailAddress (@user.FirstName @user.Surname)</a></li>
        }
    </ul>
    @if (Model.Count() == 0)
    {
        <h1 class="text-danger">Nie masz wątków</h1>
    }
</div>
