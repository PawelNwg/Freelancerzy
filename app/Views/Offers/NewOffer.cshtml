@model freelancerzy.Models.Offer
@{
    ViewData["Title"] = "Nowe ogłoszenie";
}

<section class="front">
    <div style="padding:20px">
        <h1 class="display-3 text-center mt-4 mb-4">Dodaj Ofertę</h1>
        <br />
    </div>
        
    <div id="content" class="container bg-white border border-primary rounded">
            <form asp-action="NewOffer" class="text-center">
                <br />
                <h3>Kategoria</h3>
                <select class="text-center" asp-for="CategoryId" asp-items="ViewBag.CategoryId" style="padding:3px; width:30%">
                </select>
                <br />
                <br />
                <div>
                    <h3>Tytuł</h3>
                    <input asp-for="Title" style="padding:3px; width:100%" placeholder="Tytuł">
                    <span asp-validation-for="Title" style="font-size: small" class="text-danger" />
                </div>
                <br />
                <br />

                <textarea asp-for="Description" rows="12" style="padding:3px; width:100%" placeholder="Opis" maxlength="1500"></textarea>
                <span asp-validation-for="Description" style="font-size: small" class="text-danger"></span>
                <br />
                <br />
                <div class="form-group">
                    <h3>@Html.DisplayNameFor(model => model.Wage)</h3>
                    <input type="text" asp-for="WageValue" style="padding: 3px; width: 30%" placeholder="@Html.DisplayNameFor(model => model.Wage) - może pozostać puste" />
                    <span asp-validation-for="WageValue" style="font-size: small" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="text-center">
                    <input type="submit" style="padding:15px 50px;font-size:large;" class="btn btn-outline-primary btn-dark text-light" value="Dodaj" />
                </div>
                <br />
            </form>           
    </div>


</section>

<style>
    #content {
        width:60%;
        margin-right: 20%;
        margin-left: 20%;
        padding:20px;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}