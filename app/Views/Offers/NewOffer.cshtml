@model freelancerzy.Models.Offer
@{
    ViewData["Title"] = "Nowe ogłoszenie";
}

<section class="front">
    <div class="text-center">
        <h1 style="padding:20px">Dodaj Ofertę</h1>
        <br />
    </div>
    <div id="x">
        
        <div id="content">
            <form asp-action="NewOffer">
                <br />
                <h3>Kategoria</h3>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" style="padding:3px; width:50%">
                </select>
                <br />
                <br />
                <div>
                    <h3>Tytuł</h3>
                    <input asp-for="Title" style="padding:3px; width:100%" placeholder="Tytuł">
                    <span asp-validation-for="Title" style="font-size: small" class="text-danger" />
                </div>
                <br />
                <br />
                
                <textarea asp-for="Description" rows="12" style="padding:3px; width:100%" placeholder="Opis"></textarea>
                <br />
                <br />
                <div class="form-group">
                    <h3>@Html.DisplayNameFor(model => model.Wage)</h3>
                    <input type="text" asp-for="WageValue" style="padding:3px; width:100%"   placeholder="@Html.DisplayNameFor(model => model.Wage) - może pozostać puste"/>
                    <span asp-validation-for="WageValue" style="font-size: small" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="text-center">
                    <input type="submit" style="padding:15px 50px;font-size:large;" class="btn btn-outline-primary btn-dark text-light" value="Dodaj" />
                </div>
            </form>
            
        </div>
       
    </div>

</section>

<style>
    #x {
        width: 80%;
        min-height: 700px;
        float: left;
        padding: 20px;
        background-color: lightgray;
        margin-right: 10%;
        margin-left: 10%;
        margin-bottom: 516px;
    }

    #content {
        margin-right: 5%;
        margin-left: 5%;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}