
@model freelancerzy.Models.PaginatedList<freelancerzy.Models.PageUser>



@if (Model.Count > 0)
{

        <table class="table table-bordered pb-2" >
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].blockType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].dateOfBlock)
                    </th>
                    <th>
                        Odblokuj
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @((ViewBag.blockTypes as Dictionary<int,string>)[item.blockType.GetValueOrDefault()])
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateOfBlock)
                    </td>
                    <td class="">
                        <button type="button" value="@item.Userid"  class ="btn btn-outline-dark d-block m-auto unlockUserBtn">
                            <i class="fa fa-unlock-alt"></i>
                        </button>
                    </td>
                </tr>
                }

            </tbody>
        </table>




}


    @{ 
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

<div>
    <div style="width:50%" class="d-inline-block ">
        Jesteś na stronie: <input min="1" max="@Model.TotalPages" type="number" value="@Model.PageIndex" id="page" style="width:50px;" /> z @Model.TotalPages <button class="btn btn-default" id="goToPage">Przejdź</button>

    </div>
    <div style="float:right">
        <button id="prev"
                class="btn btn-default" @prevDisabled>
            Poprzednia
        </button>
        <button id="next"
                class="btn btn-default" @nextDisabled>
            Następna
        </button>
    </div>
</div>
<script>
    var totalPages = @Model.TotalPages;
</script>
    



