@model freelancerzy.Models.Category

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h3 class="text-center" style="padding:20px">Edytuj kategoriÄ™</h3>
<hr />
<div class="container bg-white border border-primary rounded" style="width:20%; padding:30px">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Categoryid" />
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="align-middle btn btn-outline-primary btn-dark text-light submitButton">Anuluj</a>
    </div>
</div>
</body>
</html>
